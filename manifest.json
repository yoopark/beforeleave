{
  "manifest_version": 3,
  "name": "Beforeleave",
  "description": "Note down your thoughts before you leave the page.",
  "version": "0.0.1",
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    },
    "default_title": "Beforeleave"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject-modal.js", "beforeunload.js"],
      "css": ["inject-modal.css"]
    }
  ],
  "options_page": "options.html"
}
